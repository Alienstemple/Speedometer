<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.example.speedometer.SpeedometerView
        android:id="@+id/speedometer_view"
        style="@style/MySpeedometerStyle"
        android:layout_width="wrap_content"
        android:layout_weight="6"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        app:max_speed="200"
        app:medium_speed_color="@android:color/holo_orange_light"
        />

    <SeekBar
        android:id="@+id/speedometer_seekbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/seek_bar_margin"
        android:min="0"
        android:max="100"/>


</LinearLayout>