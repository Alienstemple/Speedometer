<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.speedometer.SpeedometerView
        android:id="@+id/speedometer_view"
        style="@style/MySpeedometerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/speed_padding"
        android:paddingTop="100dp"
        android:paddingRight="150dp"
        android:paddingBottom="@dimen/speed_padding"
        app:max_speed="200"
        app:medium_speed_color="@android:color/holo_orange_light" />

    <SeekBar
        android:id="@+id/speedometer_seekbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/seek_bar_margin"
        android:max="100"
        android:min="0" />

    <Button
        android:id="@+id/change_padding_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove paddings" />


</LinearLayout>