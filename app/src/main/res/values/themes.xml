<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Speedometer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="SpeedometerStyle">@style/DefaultSpeedometerStyle</item>
    </style>
    
    <style name="MySpeedometerStyle">
        <item name="low_speed_color">@color/teal_200</item>
    </style>

    <style name="DefaultSpeedometerStyle">
        <item name="low_speed_color">@color/white</item>
    </style>

    <style name="BasicSpeedometerStyle">
        <item name="low_speed_color">@android:color/darker_gray</item>
    </style>
</resources>